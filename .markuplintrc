{
  "excludeFiles": [
    "./**/*.{test,spec,stories}.tsx"
  ],
  "extends": [
    "markuplint:recommended"
  ],
  "parser": {
    ".tsx$": "@markuplint/jsx-parser"
  },
  "specs": {
    ".tsx$": "@markuplint/react-spec"
  },
  "nodeRules": [
    {
      "selector": "head",
      "rules": {
        "permitted-contents": false,
        "required-element": false
      }
    },
    {
      "selector": "input",
      "rules": {
        "no-refer-to-non-existent-id": false,
        "invalid-attr": {
          "options": {
            "allowAttrs": [
              {
                "name": "readonly",
                "value": "Boolean"
              }
            ]
          }
        }
      }
    }
  ]
}

{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-css-modules", "stylelint-config-recess-order"],
  "overrides": [
    {
      "files": ["**/*.scss"],
      "customSyntax": "postcss-scss",
      "rules": {
        "selector-pseudo-class-no-unknown": [
          true,
          {
            "ignorePseudoClasses": ["global", "modal"]
          }
        ]
      }
    }
  ]
}
